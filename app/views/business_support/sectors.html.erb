
<%= current_question do %>
  <div class="browse-container">
    <div class="inner">
      <div id="business-sectors" class="search-picker">
        <h3>Choose your area of business:</h3>

        <ul id="sector-navigation">
          <% (@sectors).each do |sector| %>
            <% if @picked_sectors.include?(sector) %>
              <%= selected_link sector, :existing_items => @picked_sectors %>
            <% else %>
              <%= link_to_add sector, :existing_items => @picked_sectors %>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

  <div class="business-sector-picked picked-items" aria-live="polite">
    <h3>Your chosen areas of interest</h3>
    <%= content_tag :p, "Your chosen areas will appear here", :class => @picked_sectors.any? ? "hidden" : "hint" %>
    <ul id="picked-business-sectors">
      <% @picked_sectors.each do |sector| %>
        <%= basket_link sector, :existing_items => @picked_sectors %>
      <% end %>
    </ul>

    <% if @picked_sectors.any? %>
      <div class="button-container">
        <%= link_to 'Next step', stage_path(:sectors => params[:sectors]), :id => "next-step", :class => "button medium" %>
      </div>
    <% end %>
  </div>
<% end %>

<%= render :partial => 'upcoming_questions' %>

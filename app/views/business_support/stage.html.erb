<%= render :partial => 'completed_questions' %>

<%= current_question do %>
  <%= form_tag stage_path do %>
    <%= hidden_field_tag :sectors, params[:sectors] %>
    <div class="select-container">
      <label for="select-stage">Select a stage
        <%= select_tag :stage, options_from_collection_for_select(@stages, :slug, :name, params[:stage]), :prompt => 'Select one...', :id => "select-stage" %>
      </label>
    </div>
    <%= submit_tag "Next step", :class => "button medium" %>
  <% end %>
<% end %>

<%= render :partial => 'upcoming_questions' %>
